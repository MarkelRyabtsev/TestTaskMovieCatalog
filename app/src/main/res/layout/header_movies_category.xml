<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView_categoryHeader_headerMoviesCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Category" />

    <Button
        android:id="@+id/button_viewAll_headerMoviesCategory"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/view_all"
        android:textSize="12sp"
        android:textColor="@color/orange"
        android:background="?selectableItemBackground"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@+id/textView_categoryHeader_headerMoviesCategory"
        app:layout_constraintBottom_toBottomOf="@+id/textView_categoryHeader_headerMoviesCategory"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>